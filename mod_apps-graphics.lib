f_linuxlogo () { 
      ANS=-1 # Initialize $ANS for until loop.
      until [ "$ANS" -ge 1 ] && [ "$ANS" -le 26 ]
      do
            clear # Blank the screen.
            APP_NAME="linuxlogo -L list"
            f_application_run
            echo -n "Enter number (1-26): "
            read ANS
            done
            #
            APP_NAME="linuxlogo -L "$ANS
            unset ans
}  # End of function f_linuxlogo
