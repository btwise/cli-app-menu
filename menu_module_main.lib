#
#  Inputs: None.
#    Uses: ARRAY_FILE, GENERATED_FILE, MENU_TITLE.
# Outputs: None.
#
f_main_menu () { # Create and display the Main Menu.
      . $THIS_DIR/lib_cli-common.lib    # invoke module/library.
      #
      # Create the arrays for the menu options and display the Menu.
      ARRAY_FILE="$THIS_DIR/menu_module_main.lib"
      GENERATED_FILE="cliappmenu_generated.tmp"
      MENU_TITLE="Main_Menu"  # Menu title must substitute underscores for spaces
      f_menu_setup $ARRAY_FILE $GENERATED_FILE $MENU_TITLE
} # End of function f_main_menu.
